<Page
    x:Class="TestUniversal.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TestUniversal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Width="1200">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="600"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Rectangle x:Name="TopZone" Fill="DarkGray" Width="1200" Height="100" Grid.Row="0"/>
        <Canvas Name="MyCanvas" Background="Black" Grid.Row="1">
            
        </Canvas>
        <Rectangle x:Name="BottomZone" Fill="DarkGray" Height="100" Grid.Row="2"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Text="Dodge Em" FontFamily="Showcard Gothic"/>
    </Grid>
    
    <!--<Canvas Name="MyCanvas">

    </Canvas>-->
    
</Page>
